<h1><%= @project.title %></h1>

<ul>
  <% @project.tasks.each do |task| %>
  <li>
    <%= check_box_tag "", "", task.done ,{"data-id" => task.id,"data-project-id" => task.project_id} %>
    <%= task.title %>
    <%= link_to "destory",project_task_path(task.project_id,task.id),method: :delete ,data: {confirm: "Are you sure?"} %>
</li>
  <% end %>
  <li>
    <%= form_for [@project, @project.tasks.build] do |f| %>
      <%= f.text_field :title %>
      <%= f.submit %>
      <%= @task.inspect %>
    <% end %>
  </li>
</ul>
